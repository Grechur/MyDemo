<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clock.zc.mydemo.ui.PresentActivity"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Image"
        android:onClick="loadImage"
        tools:ignore="OnClick" />

    <!--<ImageView-->
    <!--android:id="@+id/image_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/image23"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"

        app:siv_border_color="@android:color/darker_gray"

        app:siv_shape_type="circle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/image41"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siv_shape_type="rectangle"/>
        <com.sunfusheng.glideimageview.progress.CircleProgressView
            android:id="@+id/progressView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:progress="0"
            android:layout_centerInParent="true"
            app:cpv_innerPadding="2dp"
            app:cpv_outerColor="@color/transparent90_white"
            app:cpv_outerSize="1dp"
            app:cpv_progressNormalColor="@color/transparent"
            app:cpv_progressReachColor="@color/transparent90_white"
            app:cpv_progressStyle="FillInnerArc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
